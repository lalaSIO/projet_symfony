{% extends 'base.html.twig' %}
{#premier tempate#}
    {% block head %}

        <title>{% block title %}{% endblock %} - My Webpage</title>
    {% endblock %}

{% block body %}
    <h1 class="middle-title">planning du mois : {{ actuelle }} </h1>

    <div class="main-bloc">
        <table width="100%" >
            <tr>
                <th width="15%" height="500px">
                    <h5>Cour actuellement disponible</h5>
                    <br/>
                    <div class="cote-bloc">
                    <button class="button1">Developpement web : 35H</button>
                    <button class="button2">Agiliter :  25H</button>
                    <button class="button3">Developpement mobile : 50H</button>
                    <button class="button4">Anglais : 10H</button>

                    </div>

                </th>
                <th width="75%">
                    <div class="wrapper">


                        <table  border="1" width="100%"height = "500px">
                            <tr class="text-center">
                                <th colspan="3" width="45%"height="70px"><a href="month?ym={{ pre }}">PRECEDENT</a></th>
                                <th colspan="1" width="10%"height="70px"></th>
                                <th colspan="4"width="45%"height="70px"><a  href="month?ym={{ sui }}">SUIVANT</a></th>
                            </tr>
                            <tr class="text-center">
                                <th width="12%"height="70px">Dimanche</th>
                                <th width="15%"height="70px">Lundi</th>
                                <th width="15%"height="70px">Mardi</th>
                                <th width="16%"height="70px">Mercredi</th>
                                <th width="15%"height="70px">Jeudi</th>
                                <th width="15%"height="70px">Vendredi</th>
                                <th width="12%"height="70px">Samedi</th>
                            </tr>
                            </thead>
                            {% for semaine in semaines  %}
                            {{ semaine | raw }}
                            {% endfor %}
                        </table>

                    </div>
                </th>
                <th width="10%"></th>
            </tr>
        </table>

    </div>
    <script>

        $(document).on("click", ".open-AddBookDialog", function (e) {

            e.preventDefault();

            var _self = $(this);

            var myBookId = _self.data('id');
            $("#bookId").val(myBookId);

            $(_self.attr('href')).modal('show');
        });
    </script>

   <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <span id="modal-myvalue"></span> <span id="modal-myvar"></span> <span id="modal-bb"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>




{% endblock %}

